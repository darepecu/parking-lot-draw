
<section class='hero is-Light welcome is-small'>
  <div class='hero-body'>
    <h1 class="title">Usuarios</h1>
    <h2 class="subtitle">Usuarios inscritos para sorteo de Parqueaderos</h1>
  </div>
  
</section>

<div class="column is-one-quarter">
  <table class = 'table is-hoverable is-striped'>
    <thead>
      <tr>
        <th>Placa</th>
        <th>Tipo de Vehículo</th>
        <th>Estado Asignación</th> 
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @applicants.each do |applicant| %>
        <tr>
          <td><%= applicant.plate %></td>
          <td><%= applicant.vehicle_type %></td>
          <td><%= applicant.assigned %></td>
          <td><%= link_to 'Editar', edit_applicant_path(applicant), class: "button is-small is-info is-rounded is-outlined" %></td>
          <td><%= link_to 'Eliminar', applicant, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-small is-warning is-rounded is-outlined" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nuevo Usuario', new_applicant_path, class: 'button is-primary is-rounded is-hovered is-outlined'%>
</div>